<Window x:Class="IC.UI.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:cal="http://www.codeplex.com/CompositeWPF"
	xmlns:infrastructure="clr-namespace:IC.UI.Infrastructure;assembly=IC.UI.Infrastructure"
    Title="Intelligent controller" Height="500" Width="500">
	<DockPanel>
		<ItemsControl Name="MenuRegion"
					  cal:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MenuRegion}"
					  DockPanel.Dock="Top">
		</ItemsControl>

		<ItemsControl Name="StatusRegion"
					  cal:RegionManager.RegionName="{x:Static infrastructure:RegionNames.StatusRegion}"
					  DockPanel.Dock="Bottom">
		</ItemsControl>

		<ItemsControl Name="ProjectExplorerRegion"
					  cal:RegionManager.RegionName="{x:Static infrastructure:RegionNames.ProjectExplorerRegion}"
					  DockPanel.Dock="Right">
		</ItemsControl>
		
		<ItemsControl Name="ToolboxRegion"
					  cal:RegionManager.RegionName="{x:Static infrastructure:RegionNames.ToolboxRegion}"
					  DockPanel.Dock="Left">
		</ItemsControl>
					  
		<ItemsControl Name="SchemaRegion"
					  cal:RegionManager.RegionName="{x:Static infrastructure:RegionNames.SchemaRegion}">
		</ItemsControl>
	</DockPanel>	
</Window>
