					<Controls:DesignerItem.DragThumbTemplate>
						<ControlTemplate>
								<Label Style="{StaticResource BlockThumbItemStyle}"
									   ToolTip="{Binding BlockTypes[0].ToolTip}"
									   Content="{Binding BlockTypes[0].Name}"/>
						</ControlTemplate>
					</Controls:DesignerItem.DragThumbTemplate>
				</Label>
			<Image Source="../Images/Print.png" IsHitTestVisible="False" />-->
			<Canvas IsHitTestVisible="False" Height="150" Width="200" SnapsToDevicePixels="True">
				<!--<Rectangle Canvas.Top="0" Canvas.Left="10" Fill="LightSteelBlue"
									   Width="80" Height="150" IsHitTestVisible="False"/>
				<Rectangle Canvas.Top="70" Canvas.Left="90" Fill="LightSteelBlue"
									   Width="10" Height="10" IsHitTestVisible="False" />
				<Rectangle Canvas.Top="40" Canvas.Left="0" Fill="LightSteelBlue"
									   Width="10" Height="10" IsHitTestVisible="False" />
				<Rectangle Canvas.Top="110" Canvas.Left="0" Fill="LightSteelBlue"
									   Width="10" Height="10" IsHitTestVisible="False" />-->
				<Label FontSize="10"
					   Canvas.Top="10"
					   Canvas.Left="15"
					   Width="170"
					   FontWeight="Bold"
					   HorizontalContentAlignment="Center"
					   Background="#FF87AEFA">Plus</Label>
			
				<Controls:DesignerItem.DragThumbTemplate>
					<ControlTemplate>
						<Canvas Height="150" Width="200" SnapsToDevicePixels="True">
							<Rectangle Canvas.Top="0" Canvas.Left="10" Fill="LightSteelBlue"
									   Height="150" Width="180" SnapsToDevicePixels="True" />
							<Label Canvas.Top="73" Canvas.Left="150">Res(1)</Label>
							<Rectangle Canvas.Top="70" Canvas.Left="140" Fill="LightSteelBlue"
									   Width="10" Height="10" />
							<Rectangle Canvas.Top="40" Canvas.Left="60" Fill="LightSteelBlue"
									   Width="10" Height="10" />
							<Label Canvas.Top="43" Canvas.Left="27">Arg1(1)</Label>
							<Rectangle Canvas.Top="110" Canvas.Left="60" Fill="LightSteelBlue"
									   Width="10" Height="10" />
							<Label Canvas.Top="113" Canvas.Left="27">Arg2(1)</Label>
						</Canvas>
					</ControlTemplate>
				</Controls:DesignerItem.DragThumbTemplate>
				<Controls:DesignerItem.ConnectorDecoratorTemplate>
					<ControlTemplate>
						<Canvas Height="150" Width="200" SnapsToDevicePixels="True">
							<Controls:Connector x:Name="right1" Orientation="Right"
                                                Canvas.Top="70" Canvas.Left="140" />
							<Controls:Connector x:Name="left1" Orientation="Left"
                                                Canvas.Top="40" Canvas.Left="50" />
							<Controls:Connector x:Name="left2" Orientation="Left"
