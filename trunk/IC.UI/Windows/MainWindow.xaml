<Window x:Class="IC.UI.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:view="clr-namespace:IC.UI.Views"
    Title="MainWindow" Height="500" Width="500">
	<DockPanel>
		<view:MenuView DockPanel.Dock="Top" x:Name="_menuView" />
		<view:ProjectExplorerView DockPanel.Dock="Right" x:Name="_projectExplorerView" />
		<view:ToolboxView DockPanel.Dock="Left" x:Name="_toolboxView" />
	</DockPanel>
</Window>
