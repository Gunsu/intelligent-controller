			</Grid.ColumnDefinitions>
			<view:ToolboxView x:Name="toolboxView" x:FieldModifier="private" Grid.Column="0" />
			<ScrollViewer Grid.Column="1"
						  HorizontalScrollBarVisibility="Visible"
