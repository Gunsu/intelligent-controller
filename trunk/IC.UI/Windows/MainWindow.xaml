	xmlns:view="clr-namespace:IC.UI.Views"
	xmlns:Controls="clr-namespace:IC.UI.Controls"
	xmlns:b="clr-namespace:IC.UI"
    
	Title="Редактор схем"
	WindowState="Maximized"
	Initialized="MainWindow_Initialized">
