<UserControl x:Class="IC.UI.Views.SchemaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:IC.UI.Infrastructure.Controls;assembly=IC.UI.Infrastructure">
    <!-- Designer -->
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../Resources/DesignerCanvasContextMenu.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
    <GroupBox Header="Схема" Margin="3,0,3,0">
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
							  VerticalScrollBarVisibility="Auto">
            <Controls:DesignerCanvas x:Name="MyDesigner"
									 Focusable="True"
									 Background="{StaticResource WindowBackgroundBrush}"
									 Margin="10"
									 FocusVisualStyle="{x:Null}"
									 ContextMenu="{StaticResource DesignerCanvasContextMenu}" />
        </ScrollViewer>
    </GroupBox>
</UserControl>

