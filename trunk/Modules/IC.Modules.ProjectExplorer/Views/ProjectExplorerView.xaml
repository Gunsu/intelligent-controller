<UserControl x:Class="IC.Modules.ProjectExplorer.Views.ProjectExplorerView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="auto" />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="1"
			Name="_projectExplorerGrid">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<TextBlock Grid.Row="0"
				Text="{Binding ProjectName}"
				TextTrimming="CharacterEllipsis"
				Padding="8"
				Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}"
				Background="LightBlue" />
			<ListBox Grid.Row="1"
				Name="_projectsListBox"
				ItemsSource="{Binding SchemasListItems}"
				SelectedItem="{Binding Mode=TwoWay, Path=CurrentSchemaItem}"
				IsSynchronizedWithCurrentItem="True">
			</ListBox>
		</Grid>
		<GridSplitter Grid.Column="1"
			HorizontalAlignment="Left"
			Width="5"/>
	</Grid>
</UserControl>
